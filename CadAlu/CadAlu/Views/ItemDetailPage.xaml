<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadAlu.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Text, StringFormat='Assunto {0:N}'}" FontSize="Small"/>
        <Label Text="{Binding DataHora, StringFormat='Enviado {0:N}'}" FontSize="Micro"/>
        <Label Text="Mensagem:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>